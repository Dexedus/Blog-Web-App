<%- include("partials/header.ejs")  %>

<header id="Header">
    <h1 id="HeaderTitleEdit">Bits and Blogs</h1>
    <ul id="HeaderListEditpage">

        <li><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z"/>
          </svg></li>

        <li class="HeaderItem"><a href="/">Home</a></li>
    </ul>
</header>

<h1 id="Heading"><%=heading%></h1>

<%if(locals.post){%>
<form id="Edit-Form" method="post" action="/api/posts/<%=post.id%>">
    <input class="Form-Info Smaller" type="text" name="title" value="<%=post.title%>">
    <textarea class="Form-Info" name="content" rows="10"><%=post.content%></textarea>
    <input class="Form-Info Smaller" type="text" name="author" value="<%=post.author%>">
    <button class="Submit-Button" type="submit">Update Post</button>
</form>

<%}else{%>
<form id="New-Form" method="post" action="/api/posts">
    <p><em>Enter Your Post Details</em></p>
    <input class="Form-Info Smaller" type="text" name="title" placeholder="Title" required>
    <textarea class="Form-Info" name="content" rows="10" placeholder="Content" required></textarea>
    <input class="Form-Info Smaller" type="text" name="author" placeholder="Author" required>
    <button class="Submit-Button" type="submit">Submit Post</button>
</form>
<%}%>

<%- include("partials/footer.ejs")  %>